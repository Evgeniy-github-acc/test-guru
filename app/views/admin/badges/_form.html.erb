<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, id: :badge_name  %>
  <%= form.label :file %>
  <%= form.select :file, Dir.entries("app/assets/images").select { |f| File.file? File.join("app/assets/images", f) } %>
  <%= form.label :rule %>
  <%= form.select :rule,  BadgeAssignmentService.protected_instance_methods(false) %>
  <%= form.label :rule_param %>
  <%= form.text_field :rule_param, id: :badge_rule_param  %>
  <%= form.submit %>
<% end %>