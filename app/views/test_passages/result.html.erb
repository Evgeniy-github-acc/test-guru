

  <div class="row justify-content-center">
    <div class="col col-md-10">
    <h3><%= t('.header', title: @test_passage.test.title) %></h3>
      <div class="card">
        <div class="card-body">
          <% if @test_passage.success? %>
            <p>You have successfully passed the test!</p>
            <p class="succeed">Your result: <%= @test_passage.result %>%</p>
          <% else %>
            <p>You didn't pass the test.</p>
            <p class="not_succeed">Your result: <%= @test_passage.result %>%</p>
          <% end %>
          <% if @test_passage.time_out? %>
            <p class="not_succeed"> Your time expired </p>
          <% end %>  
          <div>
          <div>
            <% if @got_badges %>
              <% @got_badges.each do |badge| %>
                <p><%= image_tag badge.file, size:"50x50" %></p>
                <p><%= "You earn #{badge.name} badge" %></p>
              <% end %>
            <% end %>  
          </div>
            <%= link_to "All tests", tests_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <div>  
  </div>  